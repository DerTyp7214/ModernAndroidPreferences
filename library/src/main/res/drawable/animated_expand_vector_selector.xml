<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <item
        android:id="@+id/collapse"
        android:drawable="@drawable/ic_collapse_24dp"
        android:state_checked="true" />
    <item
        android:id="@+id/expand"
        android:drawable="@drawable/ic_expand_24dp" />
    <transition
        android:fromId="@id/expand"
        android:reversible="true"
        android:toId="@id/collapse">

        <aapt:attr name="android:drawable">
            <animated-vector android:drawable="@drawable/ic_collapse_24dp">
                <target android:name="path">
                    <aapt:attr name="android:animation">
                        <set>
                            <objectAnimator
                                android:duration="@android:integer/config_shortAnimTime"
                                android:propertyName="pathData"
                                android:valueFrom="@string/path_ic_expand"
                                android:valueTo="@string/path_ic_collapse"
                                android:valueType="pathType" />
                        </set>
                    </aapt:attr>
                </target>
            </animated-vector>
        </aapt:attr>
    </transition>
</animated-selector>